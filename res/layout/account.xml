<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText
        android:id="@+id/NewTFpass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/NewTFemail"
        android:ems="10"
        android:hint="NEW PASSWORD"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/NewimageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/NewTFpass2"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:src="@drawable/iconv" />

    <TextView
        android:id="@+id/manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#fff" />

    <EditText
        android:id="@+id/NewTFpass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/NewTFpass1"
        android:ems="10"
        android:hint="NEW PASSWORD"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NewimageButton1"
        android:layout_toRightOf="@+id/manager"
        android:background="@null"
        android:src="@drawable/iconx" />

    <EditText
        android:id="@+id/NewTFemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/manager"
        android:ems="10"
        android:hint="NEW EMAIL" />

</RelativeLayout>
